{
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      ".github",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "storage-debug.log"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/v1/register-seller",
        "function": "registerSeller"
      },
      {
        "source": "/api/v1/login-seller",
        "function": "loginSeller"
      },
      {
        "source": "/api/v1/getuserdetails",
        "function": "getUserDetails"
      },
      {
        "source": "/api/v1/logout-seller",
        "function": "logoutSeller"
      },
      {
        "source": "/api/v1/generate-batch",
        "function": "generateBatchQRCodes"
      },
      {
        "source": "/api/v1/scan-qr",
        "function": "scanQRCode"
      },
      {
        "source": "/api/v1/generate-qr",
        "function": "generateQRCode"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true
    }
  }
}
