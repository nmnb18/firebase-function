{
  "name": "grabbitt-functions",
  "description": "Firebase Cloud Functions for Grabbitt Seller App",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --ext .ts src",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions,auth,firestore,ui",
    "shell": "firebase functions:shell",
    "start": "npm run serve",
    "deploy": "npm run build && firebase deploy --only functions"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "base64-img": "^1.0.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.0.0",
    "node-fetch": "^2.7.0",
    "qrcode": "^1.5.4",
    "razorpay": "^2.9.6"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "typescript": "^5.4.0"
  },
  "private": true
}
