{
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      ".github",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "storage-debug.log"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/v1/auth/register-seller",
        "function": "registerSeller"
      },
      {
        "source": "/api/v1/auth/login-seller",
        "function": "loginSeller"
      },
      {
        "source": "/api/v1/seller/get-seller-details",
        "function": "getSellerDetails"
      },
      {
        "source": "/api/v1/seller/update-seller",
        "function": "updateSellerProfile"
      },
      {
        "source": "/api/v1/auth/logout-seller",
        "function": "logoutSeller"
      },
       {
        "source": "/api/v1/auth/refresh-token",
        "function": "refreshToken"
      },
      {
        "source": "/api/v1/qr-code/generate-batch",
        "function": "generateBatchQRCodes"
      },
      {
        "source": "/api/v1/qr-code/scan-qr",
        "function": "scanQRCode"
      },
      {
        "source": "/api/v1/qr-code/generate-qr",
        "function": "generateQRCode"
      },
      {
        "source": "/api/v1/qr-code/count-monthly",
        "function": "countMonthlyQRCodes"
      },
      {
        "source": "/api/v1/qr-code/get-active-qr",
        "function": "getActiveQR"
      },
      {
        "source": "/api/v1/dashboard/seller-stats",
        "function": "sellerStats"
      },
      {
        "source": "/api/v1/payments/create-order",
        "function": "createOrder"
      },
      {
        "source": "/api/v1/payments/verify-payment",
        "function": "verifyPayment"
      },
      {
        "source": "/api/v1/seller/advance-analytics",
        "function": "sellerAdvancedAnalytics"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true
    }
  }
}
