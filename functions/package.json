{
  "name": "grabbitt-functions",
  "description": "Firebase Cloud Functions for Grabbitt Seller App",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --ext .ts src",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions,auth,firestore,ui,storage",
    "shell": "firebase functions:shell",
    "start": "npm run serve",
    "deploy": "npm run build && firebase deploy --only functions",
    "optimize:build": "node scripts/build-deploy.js build",
    "optimize:test": "node scripts/build-deploy.js test",
    "optimize:deploy": "node scripts/build-deploy.js deploy",
    "optimize:analyze": "node scripts/build-deploy.js analyze",
    "optimize:status": "node scripts/build-deploy.js status",
    "optimize:tips": "node scripts/build-deploy.js tips",
    "optimize": "node scripts/build-deploy.js"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "base64-img": "^1.0.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.19",
    "expo-server-sdk": "^4.0.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.0.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "qrcode": "^1.5.4",
    "razorpay": "^2.9.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "typescript": "^5.4.0"
  },
  "private": true
}
